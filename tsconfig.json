{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@shared-types/*": [
        "shared-types/*"
      ]
    }
  },
  "include": [
    "backend/**/*.ts",
    "scripts/**/*.ts",
    "shared/**/*.ts",
    "shared-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
