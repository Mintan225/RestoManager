{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
    "@server/*": [
      "server/*"
    ],
    
    "@shared/*": [
      "shared-types/*"
    ],
    "@shared-types/*": [
      "shared-types/*"
    ]
    }
  },
  "include": [
    "backend/**/*.ts",
    "scripts/**/*.ts",
    "server/**/*.ts",
    "shared-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
