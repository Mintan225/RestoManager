{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./server",
    "paths": {
      "@shared-types/*": ["../shared-types/*"]
    }
  },
  "include": [
    "server/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}