{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
     "paths": {
      // Assure que le code trouve les fichiers partagés
      "@shared/*": [
        "shared-types/*"
      ],
      // Assure que le code trouve les fichiers partagés
      "@shared-types/*": [
        "shared-types/*"
      ],
      // Assure que le code trouve les fichiers du serveur
      "@server/*": [
        "server/*"
      ]
    }
  },
  "include": [
    "backend/**/*.ts",
    "scripts/**/*.ts",
    "server/**/*.ts",
    "shared-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
