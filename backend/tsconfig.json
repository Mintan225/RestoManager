{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["./shared-types/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/build"]
}
